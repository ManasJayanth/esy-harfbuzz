{
  "name": "esy-harfbuzz-2.4.0",
  "version": "0.0.000",
  "description": "harfbuzz-2.4.0 packaged for esy",
  "esy": {
    "buildsInSource": true,
    "exportedEnv": {
      "PKG_CONFIG_PATH": {
        "scope": "global",
        "val": "#{self.lib / 'pkgconfig' :  }"
      }
    },
    "build": [
      ["chmod", "755", "./configure"],
      ["bash", "-c", "#{os == 'windows' ? './configure --prefix=$cur__install --host x86_64-w64-mingw32' : './configure --prefix=$cur__install'}"],
      ["make"],
      ["make", "install"]
    ]
  },
  "dependencies": {},
  "resolutions": {}
}
