{
  "name": "esy-harfbuzz-2.4.0",
  "version": "0.0.000",
  "description": "harfbuzz-2.4.0 packaged for esy",
  "esy": {
    "buildsInSource": true,
    "exportedEnv": {
      "PKG_CONFIG_PATH": {
        "scope": "global",
        "val": "#{self.lib / 'pkgconfig' :  }"
      }
    },
    "build": [
      [
        "chmod",
        "755",
        "./configure"
      ],
      "find ./ -exec touch -t 200905010101 {} +",
      "./configure --disable-dependency-tracking --prefix=$cur__install #{os == 'windows' ? '-host x86_64-w64-mingw32' : ''}",
      [
        "make"
      ],
      [
        "make",
        "install"
      ]
    ]
  },
  "dependencies": {},
  "resolutions": {}
}
